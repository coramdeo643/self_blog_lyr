{{> layout/header}}

<div class="container p-5">

    <div class="mb-3 d-flex justify-content-end">
        <a href="/article/save-form" class="btn btn-light">메모 작성</a>
    </div>

    {{#articlePage.content}}
    <div class="card mb-3">
        <div class="card-body d-flex">
            <div>
                <img src="{{pictureImagePath}}" alt="사진" class="img-fluid rounded me-4" style="width:125px; height:125px; object-fit: cover;">
            </div>
            <div>
                <h4 class="card-title mb-3">{{title}}</h4>
                <p> 작성자 : {{user.username}}&nbsp;|&nbsp;{{time}}</p>
                <a href="/article/{{id}}" class="btn btn-light">상세보기</a>
            </div>
        </div>
    </div>
    {{/articlePage.content}}

    {{^articlePage.content}}
        <div class="text-center mt-5">
            <h5>등록된 게시글이 없습니다</h5>
        </div>
    {{/articlePage.content}}


    <ul class="pagination d-flex justify-content-center">
        <!--   이번 페이지 버튼      -->
        {{#previousPageNumber}}
            <li class="bg-light page-item">
                <!-- http://localhost:8080/?page=1&size=10               -->
                <a class="page-link" href="/article/list?page={{previousPageNumber}}&size={{articlePage.size}}">Previous</a>
            </li>
        {{/previousPageNumber}}
        {{^previousPageNumber}}
            <li class="bg-light page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/previousPageNumber}}
        <!-- 페이지 번호 -->
        {{#pageLinks}}
            <li class="bg-light page-item {{#active}}active{{/active}}">
                <a class="page-link" href="/article/list?page={{displayNumber}}&size={{articlePage.size}}">{{displayNumber}}</a>
            </li>
        {{/pageLinks}}

        <!-- 다음 페이지 버튼  -->
        {{#nextPageNumber}}
            <li class="bg-light page-item">
                <!-- http://localhost:8080/?page=1&size=10               -->
                <a class="page-link" href="/article/list?page={{nextPageNumber}}&size={{articlePage.size}}">Next</a>
            </li>
        {{/nextPageNumber}}
        {{^nextPageNumber}}
            <li class="bg-light page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/nextPageNumber}}
    </ul>

</div>

{{> layout/footer}}